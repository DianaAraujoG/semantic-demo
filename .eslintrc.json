{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier",
        "plugin:prettier/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ],
        "indent": [
          "error",
          2,
          {
            "VariableDeclarator": {
              "let": 2,
              "const": 2
            }
          }
        ],
        "react/prop-types": [2, { "ignore": ["children"] }],
        "linebreak-style": 0,
        "quotes": ["error", "single"],
        "jsx-quotes": ["error", "prefer-single"],
        "no-new": "off",
        "no-console": "off",
        "operator-linebreak": "off",
        "react/jsx-props-no-spreading": [ 0, {
            "html": "ignore",
            "custom": "ignore",
            "explicitSpread": "ignore"
          }],
        "arrow-body-style": ["error", "never"]
    }
}
